<% provide(:title, 'Create event') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-9">
      <h1>Edit event</h1>

      <%= form_for(@event, url: update_event_path) do |f| %>

        <%= render 'shared/error_messages', errors: @event.errors %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :capacity %>
          <%= f.text_field :capacity, class: 'form-control' %>
        </div>

        <%= f.submit "Save changes", class: "btn btn-primary btn-lg btn-block" %>
      <% end %>
    </div>
  </div>

</div>